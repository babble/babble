<?xml version='1.0'?>
<project name="appserver test" default="run-basic" basedir=".">

	<property name="targetdir" value="target"/>
	<property name="testdir" value="${targetdir}/test"/>
	
	<path id="classpath">
		<fileset dir="include">
			<include name="**/*.jar"/>
		</fileset>
	    <pathelement path="conf" />
	    <pathelement path="build" />
	</path>

	<target  name="run-basic" depends="init">      
		<taskdef classpathref="classpath" name="testng" classname="com.beust.testng.TestNGAntTask"/>

		<testng classpathref="classpath" outputdir="${testdir}">
			<xmlfileset dir="." includes="testng.xml"/>
		</testng>
	</target>
 
	<target name="init">
	    <mkdir dir="${testdir}" />
	</target>

</project>
